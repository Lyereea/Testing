package micah.testingmod.item;

import net.minecraft.entity.EntityLiving;
import net.minecraft.item.EnumToolMaterial;
import net.minecraft.item.ItemStack;
import net.minecraft.item.ItemSword;


public class BlairzariumSword extends ItemSword {

	public BlairzariumSword(int id, EnumToolMaterial par2EnumToolMaterial) {
		super(id, par2EnumToolMaterial);

	}
	public boolean hitEntity(ItemStack BlairzariumSword, EntityLiving par2EntityLiving, EntityLiving par3EntityLiving)
	{
			BlairzariumSword.damageItem(1, par3EntityLiving);
	         par2EntityLiving.setFire(10);
	         return true;
	}
}